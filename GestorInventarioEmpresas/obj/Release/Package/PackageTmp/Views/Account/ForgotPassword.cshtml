@model GestorInventarioEmpresas.Models.ForgotPasswordViewModel
@{
 
    Layout = "~/Views/Shared/_LayoutBlanck.cshtml";
}
<div class="wrapper-page">
    <div class="panel panel-color panel-primary panel-pages">

        <div class="panel-heading bg-img">
            <div class="bg-overlay"></div>
            <h3 class="text-center m-t-10 text-white"> Reset Password </h3>
        </div>

        <div class="panel-body">

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Ingresa tu correo electronico</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="alert alert-info alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    Ingresa tú <b>Email</b> y te enviaremos intrucciones.
                </div>
                <div class="form-group m-b-0">
                    <div class="input-group input-group-lg">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <span class="input-group-btn"> <button type="submit" class="btn btn-primary waves-effect waves-light">Enviar</button> </span>
                    </div>
                </div>
            }





        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
